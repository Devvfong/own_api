<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>View Photos</title>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center py-8">
  <h1 class="text-3xl font-bold mb-6 text-gray-800">Uploaded Photos</h1>

  <a href="/" class="mb-6 bg-purple-600 text-white px-6 py-2 rounded-xl hover:bg-purple-700 transition">Upload More</a>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 w-full max-w-5xl px-4">
    <% photos.forEach(photo => { %>
      <div class="bg-white rounded-2xl shadow-lg p-4 flex flex-col items-center">
        <img src="<%= photo.url %>" alt="<%= photo.title %>" class="rounded-xl mb-4 w-full h-48 object-cover">
        <h2 class="font-semibold text-gray-700 mb-2"><%= photo.title %></h2>
        <button onclick="deletePhoto(<%= photo.id %>)" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition">Delete</button>
      </div>
    <% }) %>
  </div>

<script>
async function deletePhoto(id){
  const res = await fetch(`/photos/${id}`, { method: 'DELETE' });
  if(res.ok) location.reload();
  else alert('Delete failed');
}
</script>
</body>
</html>
